<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forum.SubActivity_forum_add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/jianbian_forum_top"
        >

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:onClick="back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/back"/>

            <TextView
                android:layout_marginLeft="40dp"
               android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="话题发布"
                android:textColor="@color/white"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/corner_white_half"
            android:orientation="vertical">

            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/tv_new_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请编辑标题"
                />

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/tv_new_content"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:hint="请编辑内容"
                android:gravity="start"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择图片:"
                android:textSize="20sp"
                android:textColor="@color/my_gray_text"
                />
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_h_pic1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/add_image" />


            </LinearLayout>

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/btn_h_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/jianbian_forum_top"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </LinearLayout>





    </LinearLayout>



    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:layout_width="140dp"
        android:layout_height="125dp"
        android:src="@drawable/pic_forum2"/>


</FrameLayout>