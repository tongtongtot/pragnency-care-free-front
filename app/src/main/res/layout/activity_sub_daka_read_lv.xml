<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4D7"
    tools:context=".professor.daka.SubActivity_daka_read_lv">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:onClick="back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/back_gray"/>

            <TextView
                android:onClick="back"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读打卡"
                android:textSize="22sp"

                />

        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/corner_white_half"
            android:layout_weight="1">

            <ListView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/lv_read"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"/>

        </FrameLayout>



    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pic_read"/>


</FrameLayout>