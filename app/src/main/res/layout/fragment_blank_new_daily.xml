<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pregproject.pregproject.publicc.daily.BlankFragment_new_daily">

    <EditText

        android:id="@+id/tv_new_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请编辑标题:"
        />

    <EditText
        android:background="@null"
        android:id="@+id/tv_new_content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="请编辑内容:"
        android:gravity="start"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择图片:"
        android:textSize="20sp"
        android:textColor="@color/my_gray_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_h_pic1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/add_image" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_h_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/jianbian_public_icon_bg1"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="30dp" />

</LinearLayout>