<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/jianbian_read_bg"
    tools:context=".professor.daka.SubActivity_daka_read_detail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="10dp"
                android:onClick="back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back_gray"/>
            <TextView
                android:id="@+id/tv_pro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="为什么产后容易抑郁？"
                android:textSize="25sp"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/corner_30_white">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/head_m"/>
                <TextView
                    android:id="@+id/tv_pro_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/my_gray_text"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="李医生"/>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/tv_pro_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="因为因为因为因为xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                android:textSize="19sp"
                android:textColor="@color/my_gray_icon"/>


            <Button
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/btn_jumpToSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="阅读完成，前往运动打卡>>"
                android:textSize="20sp"
                android:background="@drawable/jianbian_read_button"
                android:textColor="@color/my_gray_text"/>

        </LinearLayout>





    </LinearLayout>





</ScrollView>